<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">


    <ImageView
            android:layout_width="179dp"
            android:layout_height="168dp"
            app:srcCompat="@drawable/pommes"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"/>

    <Button
            android:text="@string/precedent"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp"
            android:visibility="visible"
            tools:visibility="visible"
            app:layout_constraintVertical_bias="0.921"
            app:layout_constraintEnd_toStartOf="@+id/button2"/>
    <Button
            android:text="@string/suivant"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp"
            android:visibility="visible"
            app:layout_constraintVertical_bias="0.921"
            tools:visibility="visible"
            tools:layout_padding="0dp"
            app:layout_constraintStart_toEndOf="@+id/button2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" tools:layout_editor_absoluteY="339dp"
            tools:layout_editor_absoluteX="177dp" tools:ignore="MissingConstraints"/>
    <Button
            android:layout_width="68dp"
            android:layout_height="45dp" android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.988"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/caddie"
            app:layout_constraintHorizontal_bias="0.498" android:text="@string/acheter"/>


</androidx.constraintlayout.widget.ConstraintLayout>