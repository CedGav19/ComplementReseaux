<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity" android:background="#D3FBD5">


    <ImageView
            android:id="@+id/imageArticle"
            android:layout_width="204dp"
            android:layout_height="198dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.133"
            app:layout_constraintHorizontal_bias="0.497"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <Button
                android:id="@+id/precedentButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/precedent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintVertical_bias="0.921"
                app:layout_constraintEnd_toStartOf="@+id/caddieButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageArticle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="17dp"
                android:visibility="visible"
                tools:visibility="visible"/>
        <Space
                android:layout_width="25dp"
                android:layout_height="match_parent" />
        <Button
                android:id="@+id/caddieButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:background="@drawable/caddie"
                app:layout_constraintTop_toBottomOf="@+id/imageArticle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintVertical_bias="0.919"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:contentDescription="caddie"/>
        <Space
                android:layout_width="25dp"
                android:layout_height="match_parent" />

        <Button
                android:id="@+id/suivantButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/suivant"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintTop_toBottomOf="@+id/imageArticle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="17dp"
                android:visibility="visible"
                tools:visibility="visible"
                app:layout_constraintVertical_bias="0.921"
                app:layout_constraintStart_toEndOf="@+id/caddieButton"/>



    </LinearLayout>
    <TextView
            android:id="@+id/nomArticle"
            android:text="TextView"
            android:layout_width="179dp"
            android:layout_height="22dp"  tools:layout_editor_absoluteY="326dp"
            tools:layout_editor_absoluteX="117dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintVertical_bias="0.45"/>
    <TextView
            android:id="@+id/textView"
            android:text="@string/prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="361dp"
            tools:layout_editor_absoluteX="127dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.50"/>
    <TextView
            android:id="@+id/prixArticle"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  tools:layout_editor_absoluteY="361dp"
            tools:layout_editor_absoluteX="237dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintVertical_bias="0.50"/>
    <TextView
            android:id="@+id/textView3"
            android:text="@string/stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.55"

    />/>
    <TextView
            android:id="@+id/stockArticle"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="386dp"
            tools:layout_editor_absoluteX="237dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintVertical_bias="0.55"/>
    <EditText
            android:id="@+id/quantity"
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"

            android:text="1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="97dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="239dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="98dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.817"/>
    <TextView
            android:id="@+id/textView5"
            android:text="@string/quantit"
            android:layout_width="86dp"
            android:layout_height="31dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.307"
            android:layout_marginBottom="112dp"
            app:layout_constraintVertical_bias="0.812" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/acheter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acheterButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.85"/>


</androidx.constraintlayout.widget.ConstraintLayout>